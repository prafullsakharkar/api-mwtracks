{
    "version": 2,
    "builds": [
        {
            "src": "core/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "images": {
        "sizes": [
            256,
            640,
            1080,
            2048,
            3840
        ],
        "remotePatterns": [
            {
                "protocol": "https",
                "hostname": "api-mwtracks.vercel.app",
                "port": "",
                "pathname": "/media/**"
            }
        ],
        "minimumCacheTTL": 60
    },
    "redirects": [
        {
            "source": "/media",
            "destination": "/media",
            "statusCode": 301
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "core/wsgi.py"
        }
    ]
}